@page "/about"
<Header></Header>
<section class="about-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="wow fadeInUp">About HealWell+</h1>
                <p class="wow fadeInUp" data-wow-delay="0.2s">Your trusted partner in comprehensive healthcare solutions since 2010.</p>
                <a href="/contact" class="btn-app wow fadeInUp" data-wow-delay="0.4s">
                    <i class="fas fa-phone-alt"></i> Contact Us
                </a>
            </div>
            <div class="col-lg-6">
                <img src="images/g2.jpg" alt="MediCare+ Team" class="img-fluid wow fadeIn" />
            </div>
        </div>
    </div>
</section>

<section class="our-story">
    <div class="container">
        <div class="section-header wow fadeInUp">
            <h2 class="ab-1">Our Story</h2>
            <p class="tw">How we became a leader in digital healthcare</p>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="story-timeline">
                    <div class="timeline-item wow fadeInUp">
                        <div class="timeline-year">2010</div>
                        <div class="timeline-content">
                            <h3 style="color: #0d47a1 !important">Founded in Boston</h3>
                            <p>Started as a small clinic with 5 specialists focusing on telemedicine solutions.</p>
                        </div>
                    </div>
                    <div class="timeline-item wow fadeInUp" data-wow-delay="0.2s">
                        <div class="timeline-year">2014</div>
                        <div class="timeline-content">
                            <h3 style="color: #0d47a1 !important">First Digital Platform</h3>
                            <p>Launched our first online consultation platform serving 10,000+ patients annually.</p>
                        </div>
                    </div>
                    <div class="timeline-item wow fadeInUp" data-wow-delay="0.4s">
                        <div class="timeline-year">2018</div>
                        <div class="timeline-content">
                            <h3 style="color: #0d47a1 !important">National Expansion</h3>
                            <p>Expanded to 15 states with a network of 200+ healthcare providers.</p>
                        </div>
                    </div>
                    <div class="timeline-item wow fadeInUp" data-wow-delay="0.6s">
                        <div class="timeline-year">2022</div>
                        <div class="timeline-content">
                            <h3 style="color: #0d47a1 !important">AI Integration</h3>
                            <p>Implemented AI-driven diagnostics across our platform, improving accuracy by 40%.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="mission-vision wow fadeIn">
                    <div class="mission-box">
                        <i class="fas fa-bullseye"></i>
                        <h3 style="color: #0d47a1 !important">Our Mission</h3>
                        <p style="color:#212529 !important"> To make quality healthcare accessible, affordable, and convenient for everyone through innovative technology solutions.</p>
                    </div>
                    <div class="vision-box">
                        <i class="fas fa-eye"></i>
                        <h3 style="color: #0d47a1 !important">Our Vision</h3>
                        <p style="color: #212529 !important">To transform healthcare delivery by creating a seamless digital ecosystem that connects patients with the best medical professionals.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="team-section">
    <div class="container">
        <div class="section-header wow fadeInUp">
            <h2>Leadership Team</h2>
            <p>The experts driving our success</p>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="team-member wow fadeInUp">
                    <img src="images/g1.jpg" class="img-responsive"   alt="Dr. Neil Jackson" />
                    <div class="member-info">
                        <h3 style="color: #0d47a1 !important">Dr. Neil Jackson</h3>
                        <p>Founder & CEO</p>
                        <div class="social-links">
                            <a href="#"><i style="color: #0d47a1 !important" class="fab fa-linkedin"></i></a>
                            <a href="#"><i style="color: #0d47a1 !important" class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="team-member wow fadeInUp" data-wow-delay="0.2s">
                    <img src="images/g3.jpg" class="img-responsive" alt="Sarah Chen"  />
                    <div class="member-info">
                        <h3 style="color: #0d47a1 !important">Sarah Chen</h3>
                        <p>Chief Medical Officer</p>
                        <div class="social-links">
                            <a href="#"><i style="color: #0d47a1 !important" class="fab fa-linkedin"></i></a>
                            <a href="#"><i style="color: #0d47a1 !important" class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="team-member wow fadeInUp" data-wow-delay="0.4s">
                    <img src="images/appointment-image.jpg" class="img-responsive" alt="Michael Rodriguez"  />
                    <div class="member-info">
                        <h3 style="color: #0d47a1 !important">Michael Rodriguez</h3>
                        <p>CTO</p>
                        <div class="social-links">
                            <a href="#"><i style="color: #0d47a1 !important" class="fab fa-linkedin"></i></a>
                            <a href="#"><i style="color: #0d47a1 !important" class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="stats-section">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="stat-box wow fadeInUp">
                    <h3>250+</h3>
                    <p>Healthcare Professionals</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-box wow fadeInUp" data-wow-delay="0.2s">
                    <h3>500,000+</h3>
                    <p>Patients Served</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-box wow fadeInUp" data-wow-delay="0.4s">
                    <h3>45</h3>
                    <p>States Covered</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-box wow fadeInUp" data-wow-delay="0.6s">
                    <h3>98%</h3>
                    <p>Patient Satisfaction</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="values-section">
    <div class="container">
        <div class="section-header wow fadeInUp">
            <h2 style="color: #0d47a1 !important">Our Core Values</h2>
            <p>The principles that guide everything we do</p>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="value-card wow fadeInUp">
                    <div class="value-icon">
                        <i class="fas fa-heart"></i>
                    </div>
